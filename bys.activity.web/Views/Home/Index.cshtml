@{
    ViewBag.Title = "Home";
}

@model bys.activity.web.Models.HomeVM

@foreach (bys.activity.web.Models.ActivityVM item in Model.Activities)
{
    @Html.Partial("_ActivityCard", item)
}

<style type="text/css">
    .ActivityName h3 {
        color: #494949;
        font-weight: bold;
    }

    .ActivityItem {
        color: #494949;
        font-size: 16px;
    }
</style>

<script type="text/javascript">

    var collapsingFunction = function () {
        if ($(this).data("status") === "up") {
            $("#" + $(this).data("target")).css({ "display": "none" });
            $(this).data("status", "down").removeClass("glyphicon-chevron-up").addClass("glyphicon-chevron-down");
        }
        else {
            $("#" + $(this).data("target")).css({ "display": "" });
            $(this).data("status", "up").removeClass("glyphicon-chevron-down").addClass("glyphicon-chevron-up");
        }
    }

    $(function () {
        $('.btn_collapsing').click(collapsingFunction);
    })

</script>

